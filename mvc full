ğŸ”¹ Patient.cs, Doctor.cs, Report.cs

How to create:
Models â†’ Add â†’ Class â†’ Patient.cs, Doctor.cs, Report.cs

namespace MvcPracticalAllInOne.Models
{
    // Patient details
    public class Patient
    {
        public string Name { get; set; }
        public int Age { get; set; }
    }

    // Doctor details
    public class Doctor
    {
        public string Name { get; set; }
        public string Specialization { get; set; }
    }

    // Medical report
    public class Report
    {
        public int BP { get; set; }
        public int Sugar { get; set; }
        public string Result { get; set; } // Normal / Abnormal
    }
}

5ï¸âƒ£ CONTROLLER (WITH COMMENTS)
ğŸ“ How to open

Controllers â†’ HomeController.cs

using System.Web.Mvc;
using MvcPracticalAllInOne.Models;

namespace MvcPracticalAllInOne.Controllers
{
    // Main controller handling all practical programs
    public class HomeController : Controller
    {
        // Menu page
        public ActionResult Index()
        {
            return View();
        }

        // ---------------- STUDENT RESULT ----------------
        public ActionResult StudentResult()
        {
            return View();
        }

        [HttpPost]
        public ActionResult StudentResult(Student s, Marks m)
        {
            // Calculate total and percentage
            m.Total = m.Sub1 + m.Sub2 + m.Sub3;
            m.Percentage = m.Total / 3.0;

            // Pass / Fail condition
            m.Result = (m.Sub1 >= 35 && m.Sub2 >= 35 && m.Sub3 >= 35)
                        ? "PASS" : "FAIL";

            ViewBag.Student = s;
            ViewBag.Marks = m;
            return View("Result");
        }

        // ---------------- TRAVEL PLANNER ----------------
        public ActionResult TravelPlanner()
        {
            return View();
        }

        [HttpPost]
        public ActionResult TravelPlanner(Travel t)
        {
            // Travel mode cost
            int cost = t.TravelMode == "Flight" ? 5000 :
                       t.TravelMode == "Train" ? 2000 : 1000;

            // Add checkbox costs
            if (t.Sightseeing) cost += 500;
            if (t.Trekking) cost += 500;
            if (t.Shopping) cost += 500;

            t.TotalCost = cost;
            return View("Result", t);
        }

        // ---------------- SPORTS SELECTION ----------------
        public ActionResult SportsSelection()
        {
            return View();
        }

        [HttpPost]
        public ActionResult SportsSelection(Sports s)
        {
            return View("Result", s);
        }

        // ---------------- EMPLOYEE PAY ----------------
        public ActionResult EmployeePay()
        {
            return View();
        }

        [HttpPost]
        public ActionResult EmployeePay(Employee e)
        {
            int basic = 10000;
            e.TotalSalary = basic + (e.Allowances.Count * 1000);
            return View("Result", e);
        }

        // ---------------- PATIENT REPORT ----------------
        public ActionResult PatientReport()
        {
            return View();
        }

        [HttpPost]
        public ActionResult PatientReport(Patient p, Doctor d, Report r)
        {
            // Diagnosis logic
            r.Result = (r.BP > 140 || r.Sugar > 140)
                        ? "Abnormal" : "Normal";

            ViewBag.Patient = p;
            ViewBag.Doctor = d;
            ViewBag.Report = r;

            return View("Result");
        }
    }
}

